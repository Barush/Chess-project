package draft.gamemode;

/**
 * Class turn in notation defines a data class - object only saves all the 
 * informations about turn written in defined notatiion
 * 
 * @author xserec00@stud.fit.vutbr.cz
 *         xskriv01@stud.fit.vutbr.cz
 */
public class TurnInNotation {
    private char cfrom;
    private int rfrom;
    private char cto;
    private int rto;
    private int color;
    private int turn;
    private boolean jump;
    
    /**
     * Constructor of the TurnInNotation object
     * 
     * @param cfrom column of the first tile
     * @param rfrom row of the first tile
     * @param cto column of the second tile
     * @param rto row if the second tile
     * @param jump true if some fgure was thrown out, false otherwise
     * @param color color of the figure which move is saved here
     * @param turn number of a turn in the game
     */
    public TurnInNotation(char cfrom, int rfrom ,char cto, int rto, boolean jump, int color, int turn) {
        this.cfrom = cfrom;
        this.rfrom = rfrom;
        this.cto = cto;
        this.rto = rto;
        this.color = color;
        this.turn = turn;
        this.jump = jump;
    }

    /**
     * @return the cfrom
     */
    public char getCfrom() {
        return cfrom;
    }

    /**
     * @return the rfrom
     */
    public int getRfrom() {
        return rfrom;
    }

    /**
     * @return the cto
     */
    public char getCto() {
        return cto;
    }

    /**
     * @return the rto
     */
    public int getRto() {
        return rto;
    }

    /**
     * @return the color
     */
    public int getColor() {
        return color;
    }

    /**
     * @return the turn
     */
    public int getTurn() {
        return turn;
    }

    /**
     * @return the jump
     */
    public boolean isJump() {
        return jump;
    }
    
    
}
